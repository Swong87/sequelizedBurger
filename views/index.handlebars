<nav class="navbar navbar-default">
      <div class="container-fluid">
          <div class="navbar-header">
              <a class="navbar-brand" href="#">
                  <img alt="Sushi Bar" src="assets/img/thecowfish_logo.png">
              </a>
          </div>
      </div>
  </nav>

  <div class="row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10">
      <div class="jumbotron text-center">
        <h1>Sushi Bar Prep</h1>
      </div>
    </div>
    <div class="col-sm-1">
    </div>
  </div>

  <div class="container">
    <div class="row text-center">
      <h2>Add a Task</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca"><h4>To Do:</h4></label>
          <input type="text" id="ca" name="name">
        </div>
        <button class="btn btn-default" type="submit">Add</button>
      </form>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-sm-6">
        <h2>To-Do List</h2>
        <ol>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                <h4>{{this.burger_name}}</h4>

                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-default" type="submit">Complete!</button>
                </form>

                {{> burgers/delete-burger}}
              </li>
            {{/unless}}
          {{/each}}
        </ol>
      </div>

      <div class="col-sm-6">
        <h2>Completed Tasks</h2>
        <ol>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                <h4>{{this.burger_name}}</h4>

                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button class="inline btn btn-default" type="submit">Reset</button>
                  
                </form>

                {{> burgers/delete-burger}}
              </li>
            {{/if}}
          {{/each}}
        </ol>
      </div>

    </div>
  </div>